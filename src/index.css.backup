@import url('https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700;800&family=Manrope:wght@400;500;600;700;800&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  * {
    @apply box-border;
  }

  body {
    @apply bg-white text-dark-900 font-sans antialiased;
    margin: 0;
    padding: 0;
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-display font-bold;
  }
}

@layer components {
  .glass-card {
    @apply bg-white/90 backdrop-blur-xl border border-dark-200 rounded-3xl shadow-2xl;
  }

  .gradient-bg {
    background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 50%, #0369a1 100%);
  }

  .btn-primary {
    @apply px-7 py-3.5 rounded-full font-semibold text-white bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-700 hover:to-primary-600 transition-all duration-300 shadow-lg hover:shadow-2xl transform hover:-translate-y-1;
  }

  .btn-secondary {
    @apply px-7 py-3.5 rounded-full font-semibold text-dark-900 bg-white border-2 border-dark-300 hover:border-primary-500 hover:text-primary-600 transition-all duration-300 shadow-md hover:shadow-lg;
  }

  .section-padding {
    @apply py-20 md:py-28;
  }

  .container-custom {
    @apply max-w-6xl mx-auto px-5 sm:px-7 lg:px-10;
  }
}

@layer utilities {
  .text-gradient {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-primary-600 to-primary-400;
  }
}

html {
  scroll-behavior: smooth;
}

::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: transparent;
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(148, 163, 184, 0.2);
}

/* Transparent scrollbar for sidebar */
.scrollbar-transparent {
  scrollbar-width: thin;
  scrollbar-color: transparent transparent;
}

.scrollbar-transparent::-webkit-scrollbar {
  width: 6px;
}

.scrollbar-transparent::-webkit-scrollbar-track {
  background: transparent;
}

.scrollbar-transparent::-webkit-scrollbar-thumb {
  background: transparent;
  border-radius: 3px;
}

.scrollbar-transparent::-webkit-scrollbar-thumb:hover {
  background: rgba(148, 163, 184, 0.2);
}

/* React DatePicker Custom Styles */
.react-datepicker-wrapper {
  width: 100%;
}

.react-datepicker {
  font-family: 'Work Sans', sans-serif;
  border: 2px solid #e2e8f0;
  border-radius: 0.75rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.react-datepicker__header {
  background-color: #0f172a;
  border-bottom: none;
  border-radius: 0.5rem 0.5rem 0 0;
  padding: 1rem;
}

.react-datepicker__current-month,
.react-datepicker-time__header,
.react-datepicker__day-name {
  color: #eab308;
  font-weight: 600;
}

.react-datepicker__day {
  color: #0f172a;
  border-radius: 0.5rem;
  margin: 0.2rem;
}

.react-datepicker__day:hover {
  background-color: #eab308;
  color: #0f172a;
}

.react-datepicker__day--selected,
.react-datepicker__day--keyboard-selected {
  background-color: #eab308;
  color: #0f172a;
  font-weight: 600;
}

.react-datepicker__day--disabled {
  color: #cbd5e1;
  cursor: not-allowed;
}

.react-datepicker__day--disabled:hover {
  background-color: transparent;
}

.react-datepicker__navigation {
  top: 1.25rem;
}

.react-datepicker__navigation-icon::before {
  border-color: #eab308;
}

.react-datepicker__month-dropdown,
.react-datepicker__year-dropdown {
  background-color: white;
  border: 2px solid #e2e8f0;
  border-radius: 0.5rem;
  max-height: 200px;
  overflow-y: auto;
}

.react-datepicker__month-option,
.react-datepicker__year-option {
  padding: 0.5rem 1rem;
}

.react-datepicker__month-option:hover,
.react-datepicker__year-option:hover {
  background-color: #fef3c7;
}

.react-datepicker__month-option--selected,
.react-datepicker__year-option--selected {
  background-color: #eab308;
  color: #0f172a;
  font-weight: 600;
}
